#!/bin/bash

function g_next() {
	CURR_COMMIT=$(git rev-parse HEAD)
	git checkout $(git log --branches -1 --pretty=format:"%H")
	NEXT_COMMIT=$(git rev-list "$CURR_COMMIT"..HEAD | tail -1)
	git checkout "$NEXT_COMMIT"
}

function g_prev() {
	git checkout HEAD^1
}

function gwtcd() {
  cd "$(git worktree list | fzf | awk '{print $1}')"
}

alias awse="my_aws_helper exec"
alias awsl="my_aws_helper login"

function my_aws_helper() {
	cmd=$1
	account=$2
	shift 2
	aws-vault $cmd $account -d 8h $@
}

function create_gitlab_mr() {
    if [ -z "$GITLAB_USER_ID" ]; then
        echo "Error: GITLAB_USER_ID environment variable is not set."
        return 1
    fi
    glab mr create -a "$GITLAB_USER_ID" --fill --remove-source-branch
}
